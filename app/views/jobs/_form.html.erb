<%= form_for(@job) do |f| %>
	<% if @job.errors.any? %>
		<ul>
			<% @job.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :org %><br>
		<%= f.text_field :org %>
	</div>
	<div class="field">
		<%= f.label :internship %><br>
		<%= f.check_box :internship %>
	</div>
	<div class="field">
		<%= f.label :postdate %><br>
		<%= f.date_field :postdate %>
	</div>
	<div class="field">
		<%= f.label :filldate %><br>
		<%= f.date_field :filldate %>
	</div>
	<div class="field">
		<%= f.label :location %><br>
		<%= f.text_field :location %>
	</div>
	<div class="field">
		<%= f.label :link %><br>
		<%= f.text_field :link %>
	</div>
	<div class="field">
		<%= f.label :description %> (HTML allowed)<br>
		<%= f.text_area :description %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>