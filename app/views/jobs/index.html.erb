<% if Job.exists? %>
	<script type="text/javascript" charset="utf-8">
		$(document).ready(function() {
			jDataTable = $('#jobs').dataTable( {
		        "iDisplayLength": 50,
		        "aLengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]]
		    } );
		    jDataTable.fnSort( [ [1,'asc'] ] );
		} );
	</script>
	<table cellpadding="0" cellspacing="0" border="0" class="display" id="jobs" width="100%">
		<thead>
			<% if !signed_in? %>
				<tr><td colspan='2'><p align='right'><%= link_to "Sign up to add new jobs!", signup_path %></p></td></tr>
			<% end %>
			<tr>
				<th>Title</th>
				<th>Org</th>
			</tr>
		</thead>
		<% @jobs.each do |job| %>
			<tr class="odd gradeX">
				<td><strong><%= link_to job.title, job %></strong></td>
				<td><%= job.org %></td>
			</tr>
		<% end %>
	</table>
<% else %>
	<div id='job'>
		<em>No jobs yet...</em>
	</div>
<% end %>
<div id='job'>
	<div class='right'>
		<% if signed_in? %>
			<%= link_to "Add a new job?", new_job_path %>
		<% else %>
			<%= link_to "Sign up to add new jobs...", signup_path %>
		<% end %>
	</div>
</div>