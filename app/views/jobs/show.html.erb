<p id="notice"><%= notice %></p>
<h1><%= @job.title %></h1>
<p><%= @job.description.html_safe %></p>
<ul>
	<li><b>Org:</b> <%= @job.org %></li>
	<li><b>Internship?:</b> <%= @job.internship %></li>
	<li><b>Post Date:</b> <%= @job.postdate %></li>
	<li><b>Fill By:</b> <%= @job.filldate %></li>
	<li><b>Job Location:</b> <%= @job.location %></li>
	<li><b>Link to Posting:</b> <%= link_to @job.link, @job.link %></li>
</ul>


<% if current_user == @job.user %>
    <%= link_to 'Edit', edit_job_path(@job) %> | <%= link_to 'Destroy', @job, method: :delete, data: { confirm: 'Are you sure?' } %> |	
<% end %>

<%= link_to 'Back', jobs_path %>
<br>
